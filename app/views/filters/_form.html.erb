<head>
<script type="text/javascript">
 function togglePrice(){
 	if(document.getElementById("price").style.display=="none")
 		document.getElementById("price").style.display="block";
 	else
 		document.getElementById("price").style.display="none";
 }
 function toggleTotal(){
 	if(document.getElementById("total").style.display=="none")
 		document.getElementById("total").style.display="block";
 	else
 		document.getElementById("total").style.display="none";
 }
 function toggleAvailable(){
 	if(document.getElementById("available").style.display=="none")
 		document.getElementById("available").style.display="block";
 	else
 		document.getElementById("available").style.display="none";
 }
 function toggleBathrooms(){
 	if(document.getElementById("bathrooms").style.display=="none")
 		document.getElementById("bathrooms").style.display="block";
 	else
 		document.getElementById("bathrooms").style.display="none";
 }
 function toggleFurnished(){
 	if(document.getElementById("furnished").style.display=="none")
 		document.getElementById("furnished").style.display="block";
 	else
 		document.getElementById("furnished").style.display="none";
 }
 function toggleTerms(){
 	if(document.getElementById("terms").style.display=="none")
 		document.getElementById("terms").style.display="block";
 	else
 		document.getElementById("terms").style.display="none";
 }
 function toggleNegotiable(){
 	if(document.getElementById("negotiable").style.display=="none")
 		document.getElementById("negotiable").style.display="block";
 	else
 		document.getElementById("negotiable").style.display="none";
 }
 function toggleUtilities(){
 	if(document.getElementById("utilities").style.display=="none")
 		document.getElementById("utilities").style.display="block";
 	else
