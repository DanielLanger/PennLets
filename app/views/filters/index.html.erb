<h1>Listing filters</h1>

<table>
  <tr>
    <th>Maximum Price</th>
    <th>Total rooms</th>
    <th>Bathrooms</th>
    <th>Furnished</th>
    <th>Term</th>
    <th>Negotiable</th>
    <th>Utilities</th>
    <th>Air conditioning</th>
    <th>Parking</th>
    <th>Washer dryer</th>
    <th>Private bathroom</th>
    <th>Available rooms</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @filters.each do |filter| %>
  <tr>
    <td><%= filter.maximum_price %></td>
    <td><%= filter.total_rooms %></td>
    <td><%= filter.bathrooms %></td>
    <td><%= filter.furnished %></td>
    <td><%= filter.term %></td>
    <td><%= filter.negotiable %></td>
    <td><%= filter.utilities %></td>
    <td><%= filter.air_conditioning %></td>
    <td><%= filter.parking %></td>
    <td><%= filter.washer_dryer %></td>
    <td><%= filter.private_bathroom %></td>
    <td><%= filter.available_rooms %></td>
    <td><%= link_to 'Show', filter %></td>
    <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
    <td><%= link_to 'Destroy', filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

